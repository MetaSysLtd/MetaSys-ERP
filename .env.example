# Database Connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/metasys

# Server Settings
PORT=5000
HOST=0.0.0.0
NODE_ENV=development
API_PREFIX=/api

# Authentication
JWT_SECRET=metasys_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=metasys_session_secret_change_this_in_production
SESSION_EXPIRES_IN=86400000 # 24 hours in milliseconds

# CORS Settings
CORS_ORIGIN=*

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password
SMTP_FROM_EMAIL=noreply@metasys.com
SMTP_FROM_NAME=MetaSys ERP

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C0XXXXXXXX
SLACK_ADMIN_CHANNEL_ID=C0XXXXXXXX
SLACK_SALES_CHANNEL_ID=C0XXXXXXXX
SLACK_DISPATCH_CHANNEL_ID=C0XXXXXXXX

# File Upload Settings
MAX_FILE_SIZE_MB=5
UPLOAD_DIR=./uploads

# Logging
LOG_LEVEL=info # error, warn, info, debug

# Security
BCRYPT_SALT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100